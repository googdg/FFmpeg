# AWS活动管理系统 - 环境变量配置示例

# 服务器配置
PORT=3000
NODE_ENV=development

# JWT密钥 (生产环境请使用强密钥)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Session密钥 (生产环境请使用强密钥)
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# 数据库配置
DB_PATH=./event-manager.db

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# 邮件配置 (可选)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# 微信配置 (可选)
WECHAT_APP_ID=your-wechat-app-id
WECHAT_APP_SECRET=your-wechat-app-secret

# 短信配置 (可选)
SMS_ACCESS_KEY=your-sms-access-key
SMS_SECRET_KEY=your-sms-secret-key

# 对象存储配置 (可选)
OSS_ACCESS_KEY=your-oss-access-key
OSS_SECRET_KEY=your-oss-secret-key
OSS_BUCKET=your-bucket-name
OSS_REGION=your-region

# 监控配置 (可选)
ENABLE_MONITORING=false
SENTRY_DSN=your-sentry-dsn

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# 安全配置
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=5

# CORS配置
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# 缓存配置
CACHE_TTL=300000

# 备份配置
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION=7