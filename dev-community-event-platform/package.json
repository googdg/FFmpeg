{
  "name": "dev-community-event-platform",
  "version": "1.0.0",
  "description": "开发者社区活动管理平台 - 集成直播、AI处理、多语言支持的全流程活动管理系统",
  "main": "server/src/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/src/server.js",
    "client:dev": "cd client && npm run dev",
    "build": "npm run client:build && npm run server:build",
    "client:build": "cd client && npm run build",
    "server:build": "cd server && npm run build",
    "start": "node server/dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.tsx --fix",
    "db:migrate": "cd server && npm run db:migrate",
    "db:seed": "cd server && npm run db:seed",
    "docker:build": "docker build -t dev-community-platform .",
    "docker:run": "docker run -p 3000:3000 -p 8000:8000 dev-community-platform"
  },
  "keywords": [
    "developer-community",
    "event-management",
    "live-streaming",
    "ai-processing",
    "multilingual",
    "webrtc",
    "speech-to-text",
    "mind-mapping"
  ],
  "author": "Google Developer Community",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.3",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "concurrently": "^8.2.1",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}