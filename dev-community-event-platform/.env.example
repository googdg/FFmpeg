# 数据库配置
DATABASE_URL=postgresql://username:password@localhost:5432/dev_community_platform
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=dev_community_platform
DATABASE_USER=username
DATABASE_PASSWORD=password

# Redis配置
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT和安全配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
BCRYPT_ROUNDS=12

# 服务器配置
NODE_ENV=development
PORT=8000
CLIENT_PORT=3000
API_BASE_URL=http://localhost:8000/api
CLIENT_BASE_URL=http://localhost:3000

# 文件存储配置
UPLOAD_DIR=uploads
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,video/webm,audio/mp3,audio/wav,application/pdf

# 云存储配置 (可选)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=dev-community-platform

# AI服务配置
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
WHISPER_MODEL=whisper-1

# 翻译服务配置
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key
TRANSLATION_SERVICE=google

# 直播服务配置
RTMP_SERVER_URL=rtmp://localhost:1935/live
HLS_SERVER_URL=http://localhost:8080/hls
WEBRTC_STUN_SERVERS=stun:stun.l.google.com:19302
WEBRTC_TURN_SERVERS=

# 邮件服务配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@dev-community-platform.com

# 监控和日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log
SENTRY_DSN=
PROMETHEUS_PORT=9090

# 开发配置
DEBUG=true
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3000